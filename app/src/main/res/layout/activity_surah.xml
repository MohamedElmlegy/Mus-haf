<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <data>
        <variable
            name="surah"
            type="com.example.mushaf.model2.surah_text.Data" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.SurahActivity"
        android:background="@drawable/gradient"
        >
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/my_toolbar"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#5F3E99"
            android:elevation="4dp"
            app:titleTextColor="@color/white"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

        <LinearLayout
            android:padding="2dp"
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/surah_name_border"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/my_toolbar">

            <ImageButton
                android:id="@+id/left_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:backgroundTint="#00FFFFFF"
                android:padding="10dp"
                android:src="@drawable/left32" />

            <TextView
                android:textColor="@color/black"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="@{surah.name}"
                android:textSize="26dp" />

            <ImageButton
                android:padding="10dp"
                android:id="@+id/right_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:backgroundTint="#00FFFFFF"
                android:src="@drawable/right32" />


        </LinearLayout>

        <LinearLayout
            android:weightSum="3"
            android:background="#FFFFFF"
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="horizontal">


            <LinearLayout

                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageButton
                    android:layout_weight="1"
                    android:backgroundTint="#00FFFFFF"
                    android:id="@+id/zoom_in"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/zoom_in"/>
                <ImageButton
                    android:layout_weight="1"
                    android:backgroundTint="#00FFFFFF"
                    android:id="@+id/zoom_out"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/zoom_out"/>
                <ImageButton
                    android:layout_weight="1"
                    android:backgroundTint="#00FFFFFF"
                    android:id="@+id/loop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/loop"/>
            </LinearLayout>

            <Spinner
                android:id="@+id/spinnerr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layoutDirection="rtl"
                android:textSize="24dp"
                android:switchTextAppearance="@color/high"
                />





        </LinearLayout>



        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/recyclerview2"
            app:layout_constraintBottom_toTopOf="@id/linearLayout3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
